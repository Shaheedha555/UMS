<%- include('../layouts/header.ejs') -%>

<h1 class="text-center m-5">New User</h1>
<main class="form-signin w-25 m-auto text-center">
    <% if (typeof message!=='undefined'){ %>
    <p> <%= message %> </p>
    <%}%>

    <form method="POST" action="add-user">

      <div class="form-floating">
        <input type="name" name="name" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Name</label>
      </div>
      <div class="form-floating">
        <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required >
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
        <label for="floatingPassword">Password</label>
      </div>
      
    <a href="/admin/add-user"><button class="w-20 btn btn-lg btn-primary" type="submit">Add User</button>
              </a>
    </form>

    <a class="btn btn-primary w-100 mt-5" href="/admin/home">Home</a>

  </main>


<%- include('../layouts/footer.ejs') -%>
