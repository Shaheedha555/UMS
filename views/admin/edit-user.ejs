<%- include('../layouts/header.ejs') -%>

<div class="container text-center mt-5">
  <main class="form-signin w-25 mt-5 pt-5 m-auto text-center">

  <form method="POST" action="edit-user">

    <div class="form-floating">
      <input type="name" name="name" class="form-control" id="floatingPassword" placeholder="Password" value="<%= user.name %>" required>
      <label for="floatingPassword">Name</label>
    </div>
    <div class="form-floating">
      <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" value="<%= user.email %>" required >
      <label for="floatingInput">Email address</label>
    </div>
    <input type="hidden" name="id" value="<%= user._id %>">
    
    
  <a href="/admin/"><button class="w-20 btn btn-lg btn-primary" type="submit">Save</button>
            </a>
  </form>
  </main>

</div>


<%- include('../layouts/footer.ejs') -%>
